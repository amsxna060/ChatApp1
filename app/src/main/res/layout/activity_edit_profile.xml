<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditProfileActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pic_name_layout">

                <ImageView
                    android:id="@+id/ecover_pic"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/cover"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewprofile"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="120dp">
                    <EditText
                        android:id="@+id/euser_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="55dp"
                        android:padding="2dp"
                        android:hint="Enter Name"
                        android:textSize="28dp"
                        android:textColor="@color/colorThemeAccentpink"
                        android:fontFamily="cursive"
                        />
                    <EditText
                        android:id="@+id/euser_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:padding="2dp"
                        android:hint="The lives goal is to be happy always"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="16dp"
                        android:textColor="#7f000000"
                        android:fontFamily="serif"
                        />


                </androidx.cardview.widget.CardView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/euser_profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:siBorderType="stroke"
                    app:siBorderColor="@color/colorAccent"
                    app:siBorderWidth="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/profilepic"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profile_add_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="160dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/add_icon" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardviewcontact"
                android:layout_below="@+id/carviewgender">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/header_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:padding="2dp"
                        android:textColor="@color/colorThemeAccentpink"
                        />
                    <TextView
                        android:id="@+id/euser_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_contact"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:textColor="#7f000000"
                        />
                    <EditText
                        android:id="@+id/euser_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/euser_email"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:hint="Contact Number"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:textColor="#7f000000"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardviewdob"
                android:layout_below="@+id/pic_name_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/header_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:padding="2dp"
                        android:textColor="@color/colorThemeAccentpink"
                        />
                    <EditText
                        android:id="@+id/euser_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_dob"
                        android:padding="4dp"
                        android:hint="Date of Birth"
                        android:focusableInTouchMode="false"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_cake_black_24dp"
                        android:textColor="#7f000000"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/carviewgender"
                android:layout_below="@+id/cardviewdob">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/header_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:padding="2dp"
                        android:textColor="@color/colorThemeAccentpink"
                        />
                    <EditText
                        android:id="@+id/euser_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_gender"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:hint="Gender"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                        android:textColor="#7f000000"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/carviewverified"
                android:layout_below="@+id/cardviewcontact">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/header_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:padding="2dp"
                        android:textColor="@color/colorThemeAccentpink"
                        />
                    <TextView
                        android:id="@+id/eis_user_verified"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_verified"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:textColor="#7f000000"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardviewadd"
                android:layout_below="@+id/carviewverified">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/header_Add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:padding="2dp"
                        android:textColor="@color/colorThemeAccentpink"
                        />
                    <EditText
                        android:id="@+id/euser_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_Add"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:hint="Add Address"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_home_grey_24dp"
                        android:textColor="#7f000000"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardviewhobby"
                android:layout_below="@+id/cardviewadd">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/header_hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Hobby"
                        android:padding="2dp"
                        android:textColor="@color/colorThemeAccentpink"
                        />
                    <EditText
                        android:id="@+id/euser_hobby1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header_hobby"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:hint="Add hobby"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_toys_black_24dp"
                        android:textColor="#7f000000"
                        />
                    <EditText
                        android:id="@+id/euser_hobby2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/euser_hobby1"
                        android:padding="4dp"
                        android:hint="Add hobby"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_toys_black_24dp"
                        android:textColor="#7f000000"
                        />
                    <EditText
                        android:id="@+id/euser_hobby3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/euser_hobby2"
                        android:padding="4dp"
                        android:hint="Add hobby"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_toys_black_24dp"
                        android:textColor="#7f000000"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/edit_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:backgroundTint="#D93A6E"
                android:layout_below="@id/cardviewhobby"
                android:text="SAVE"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="serif"
                />
            <ProgressBar
                android:id="@+id/progress_bar_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/cardviewadd"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="90dp"
                android:indeterminateTint="@color/colorThemeAccentpink"
                android:alpha="0"
                />
        </RelativeLayout>
    </ScrollView>

