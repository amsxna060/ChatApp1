<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditPostActivity">

    <RelativeLayout
        android:id="@+id/add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/epost_my_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/profilepic"
            app:siBorderColor="@color/colorThemeAccentpink"
            app:siBorderWidth="1dp"
            app:siBorderType="stroke"
            />

        <TextView
            android:id="@+id/epostmy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Amol Saxena"
            android:layout_toRightOf="@+id/epost_my_pic"
            android:fontFamily="@font/almendra_display"
            android:padding="10dp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ewrite_thought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write your Thoughts...."
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:maxHeight="150dp"
            android:textStyle="bold"
            android:background="@drawable/bg_text"
            android:fontFamily="@font/clicker_script"
            android:layout_below="@+id/epost_my_pic"/>
        <Button
            android:id="@+id/update_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Post"
            android:backgroundTint="@color/colorThemeAccentpink"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/eshow_posted_pic"
            android:layout_marginRight="16dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/eshow_posted_pic"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/ewrite_thought"

            />



    </RelativeLayout>


</RelativeLayout>
